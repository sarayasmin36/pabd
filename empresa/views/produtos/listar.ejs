<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Produtos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">

    <h1>Lista de Produtos</h1>

    <a href="/produtos/cadastro" class="btn btn-primary mb-3">
        Cadastrar Novo
    </a>

    <table class="table table-bordered">

        <thead>
            <tr>
                <th>ID</th>
                <th>Produto</th>
                <th>Preço</th>
                <th>Estoque</th>
                <th>Categoria</th>
                <th>Fornecedor</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>

        <% produtos.forEach(p => { %>

            <tr>

                <td><%= p.id_produto %></td>
                <td><%= p.nome_produto %></td>
                <td>R$ <%= parseFloat(p.preco).toFixed(2) %></td>
                <td><%= p.estoque %></td>
                <td><%= p.nome_categoria %></td>
                <td><%= p.nome_fornecedor %></td>

<td>

    <a href="/produtos/editar/<%= p.id_produto %>"
       class="btn btn-warning btn-sm">
        Editar
    </a>

    <% if (p.total_vendas > 0) { %>

<div class="d-inline-block position-relative">

    <button
        type="button"
        class="btn btn-secondary btn-sm"
        style="cursor: pointer;"
        onclick="alert('Este produto está em uma venda e não pode ser excluído!')"
        onmouseover="this.nextElementSibling.style.display='block'"
        onmouseout="this.nextElementSibling.style.display='none'">
        Apagar
    </button>

    <small
        class="text-danger position-absolute bg-white border rounded px-2 py-1"
        style="display:none; top:100%; left:0; white-space:nowrap;">
        Produto está à venda
    </small>

</div>


    <% } else { %>

        <a href="/produtos/excluir/<%= p.id_produto %>"
           class="btn btn-danger btn-sm"
           onclick="return confirm('Deseja realmente excluir?')">
            Apagar
        </a>

    <% } %>

</td>

            </tr>

        <% }) %>

        </tbody>

    </table>

    <a href="/" class="btn btn-primary mb-3">
        Voltar para início
    </a>

</div>

</body>
</html>
