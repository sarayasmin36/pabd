<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Produtos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1>Lista de Produtos</h1>
    <a href="/produtos/cadastro" class="btn btn-primary mb-3">Cadastrar Novo</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Produto</th>
                <th>Preço</th>
                <th>Estoque</th>
                <th>Categoria</th>
                <th>Fornecedor</th>
            </tr>
        </thead>
        <tbody>
            <% produtos.forEach(p => { %>
            <tr>
                <td><%= p.id_produto %></td>
                <td><%= p.nome_produto %></td>
                <td>R$ <%= p.preco.toFixed(2) %></td>
                <td><%= p.estoque %></td>
                <td><%= p.nome_categoria %></td>
                <td><%= p.nome_fornecedor %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/" class="btn btn-primary mb-3">Voltar para início</a>
</div>
</body>
</html>
