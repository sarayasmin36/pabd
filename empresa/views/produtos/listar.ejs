<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Produtos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">

    <h1>Lista de Produtos</h1>

    <a href="/produtos/cadastro" class="btn btn-primary mb-3">
        Cadastrar Novo
    </a>

    <table class="table table-bordered">

        <thead>
            <tr>
                <th>ID</th>
                <th>Produto</th>
                <th>Preço</th>
                <th>Estoque</th>
                <th>Categoria</th>
                <th>Fornecedor</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>

        <% produtos.forEach(p => { %>

            <tr>
                <td><%= p.id_produto %></td>
                <td><%= p.nome_produto %></td>
                <td>R$ <%= parseFloat(p.preco).toFixed(2) %></td>
                <td><%= p.estoque %></td>
                <td><%= p.nome_categoria %></td>
                <td><%= p.nome_fornecedor %></td>

                <td>

                    <!-- BOTÃO EDITAR -->
                    <a href="/produtos/editar/<%= p.id_produto %>"
                       class="btn btn-warning btn-sm">
                        Editar
                    </a>
                
                    <% if (p.total_vendas > 0) { %>
                        <button class="btn btn-secondary btn-sm" disabled>Excluir</button>
                        <small class="text-danger d-block">Produto está em uma venda</small>
                    <% } else { %>
                        <form action="/produtos/excluir/<%= p.id_produto %>" method="POST" style="display:onclick">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Deseja excluir?')">Excluir</button>
                        </form>
                    <% } %>
                
                </td>
                

            </tr>

        <% }) %>

        </tbody>

    </table>

    <a href="/" class="btn btn-secondary">Voltar</a>

</div>

</body>
</html>
