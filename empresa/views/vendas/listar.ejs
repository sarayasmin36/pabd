<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Vendas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1>Lista de Vendas</h1>

    <a href="/vendas/cadastro" class="btn btn-primary mb-3">
        Cadastrar Venda
    </a>

    <table border="1">
        <thead>
          <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Cliente</th>
            <th>Funcionário</th>
            <th>Produtos</th>
            <th>Valor Total</th>
          </tr>
        </thead>
        <tbody>
          <% vendas.forEach(v => { %>
            <tr>
              <td><%= v.id_venda %></td>
              <td><%= v.data_venda.toISOString().split('T')[0] %></td>
              <td><%= v.cliente %></td>
              <td><%= v.funcionario %></td>
              <td>
                <ul>
                  <% v.produtos.forEach(p => { %>
                    <li><%= p.nome %> (Qtd: <%= p.quantidade %>)</li>
                  <% }) %>
                </ul>
              </td>
              <td>R$ <%= parseFloat(v.valor).toFixed(2) %></td>

            </tr>
          <% }) %>
        </tbody>
      </table>
      

    <a href="/" class="btn btn-primary mb-3">
        Voltar para início
    </a>
</div>
</body>
</html>
