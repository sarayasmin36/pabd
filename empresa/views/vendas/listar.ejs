<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Vendas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1>Lista de Vendas</h1>

    <a href="/vendas/cadastro" class="btn btn-primary mb-3">
        Cadastrar Venda
    </a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Data</th>
                <th>Valor</th>
                <th>Cliente</th>
                <th>FuncionÃ¡rio</th>
            </tr>
        </thead>
        <tbody>
            <% vendas.forEach(v => { %>
                <tr>
                    <td><%= v.id_venda %></td>
                    <td><%= v.data_venda.toISOString().split('T')[0] %></td>
                    <td>R$ <%= Number(v.valor).toFixed(2) %></td>
                    <td><%= v.cliente %></td>
                    <td><%= v.funcionario %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <a href="/" class="btn btn-primary mb-3">
